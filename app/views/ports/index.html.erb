<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1>Ports</h1>
  <p></p>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Port code</th>
      <th>Country</th>
      <th>Port type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ports.each do |port| %>
      <tr>
        <td><%= port.name %></td>
        <td><%= port.port_code %></td>
        <td><%= port.country.name %></td>
        <td><%= port.port_type.name %></td>
        <td><%= link_to 'Show', port %></td>
        <td><%= link_to 'Edit', edit_port_path(port) %></td>
        <td><%= link_to 'Destroy', port, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

