<p id="notice"><%= notice %></p>

<h1>Rates</h1>

<table class="table">
  <thead>
    <tr>
      <th>Origin</th>
      <th>Destination</th>
      <th>Carrier</th>
      <th>Shipment type</th>
      <th>Cost</th>
      <th>Unit of measure</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rates.each do |rate| %>
      <tr>
        <td><%= rate.origin.name %></td>
        <td><%= rate.destination.name %></td>
        <td><%= rate.carrier.name %></td>
        <td><%= rate.shipment_type.name %></td>
        <td><%= number_to_currency(rate.cost) %></td>
        <td><%= rate.unit_of_measure.name %></td>
        <td><%= link_to 'Show', rate %></td>
        <td><%= link_to 'Edit', edit_rate_path(rate) %></td>
        <td><%= link_to 'Destroy', rate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

