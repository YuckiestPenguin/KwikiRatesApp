<%= form_for(carrier) do |f| %>
<% if carrier.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(carrier.errors.count, "error") %>
        prohibited this carrier from being saved:</h2>

    <ul>
        <% carrier.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
</div>

<div class="field">
    <%= f.label :carrier_type_id %>
    <%= f.collection_select :carrier_type_id, CarrierType.all, :id, :name %>

</div>

<div class="actions">
    <%= f.submit %>
</div>
<% end %>
